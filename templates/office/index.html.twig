{% extends 'base.html.twig' %}

{% block title %}Office index{% endblock %}

{% block body %}
    <h1>Office index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for office in offices %}
            <tr>
                <td>{{ office.id }}</td>
                <td>{{ office.name }}</td>
                <td>{{ office.code }}</td>
                <td>{{ office.description }}</td>
                <td>{{ office.createdAt ? office.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ office.updatedAt ? office.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_office_show', {'id': office.id}) }}">show</a>
                    <a href="{{ path('app_office_edit', {'id': office.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_office_new') }}">Create new</a>
{% endblock %}
